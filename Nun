  <script>
    const clientId = "1372536402088038431";
    const redirectUri = encodeURIComponent(
      "https://thesocialhub.vercel.app/TheSocialHub.html"
    );
    const scope = encodeURIComponent("identify email");

    const loginLink = document.getElementById("discord-login");
    const logoutLink = document.getElementById("discord-logout");

    // Function to update UI based on login state
    function updateUI() {
      const user = JSON.parse(localStorage.getItem("discordUser"));
      if (user && user.username) {
        loginLink.style.display = "none";
        logoutLink.style.display = "inline";
        logoutLink.textContent = `Logout (${user.username})`;
      } else {
        loginLink.style.display = "inline";
        logoutLink.style.display = "none";
      }
    }

    // On page load, check if URL has code param from Discord OAuth
    const urlParams = new URLSearchParams(window.location.search);
    const code = urlParams.get("code");

    if (code) {
      // In a real app, here you send 'code' to your backend to exchange for token & user info
      // Demo: simulate successful login with dummy user data
      const dummyUser = {
        username: "DiscordUser",
        id: "1234567890",
      };
      localStorage.setItem("discordUser", JSON.stringify(dummyUser));

      // Remove the code param from URL without reloading
      window.history.replaceState({}, document.title, window.location.pathname);

      updateUI();
    } else {
      updateUI();
    }

    // Redirect to Discord OAuth on login click
    loginLink.addEventListener("click", (e) => {
      e.preventDefault();
      const discordOauthUrl = `https://discord.com/api/oauth2/authorize?client_id=${clientId}&redirect_uri=${redirectUri}&response_type=code&scope=${scope}`;
      window.location.href = discordOauthUrl;
    });

    // Logout clears localStorage
    logoutLink.addEventListener("click", (e) => {
      e.preventDefault();
      localStorage.removeItem("discordUser");
      updateUI();
    });
  </script>
